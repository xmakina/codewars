{
    "editor.formatOnSave": false,
    "editor.tabSize": 2,
    "eslint.autoFixOnSave": true,
    "standard.validate": [
        "javascript"
    ],
    "eslint.validate": [
        "javascript",
        {
            "language": "vue",
            "autoFix": true
        }
    ],
    "files.exclude": {
        ".gitignore": true,
        ".settings/": true,
        ".vscode": true,
        "*.orig": true,
        "node_modules": true,
        "package-lock.json": true
    },
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
}